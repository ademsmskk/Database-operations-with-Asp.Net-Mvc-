
@{
    ViewBag.Title = "Kategori Ekle";
}
<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                   Kategori Ekleme Safası
                </div>
                <div class="block-controls">
                    <a href=" /Kategori/Index">   <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kategori/Ekle" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kategori Adı :</label>
                            <input type="text" name="_ProductName" value="" class="form-control" id="exampleInputEmail1" placeholder="Kategori Adı Giriniz">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Tanımı : </label>
                            <input type="text" name="_UnitPrice " class="form-control" id="exampleInputPassword1" placeholder="Tanım Giriniz">
                        </div>
                    

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>


    </div>

</div>



