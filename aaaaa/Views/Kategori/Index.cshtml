
@{
    ViewBag.Title = "Kategoriler";
}
@using aaaaa.Controllers
@model List<Categories>

<div class=" row">
    <div class=" col-md-12">
        <div class="block">
            <div class=" block-heading">
                <div class=" main-menu-icon main-text h2">
                    Kategoriler
                </div>
                <div class=" block-controls">

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href=" /Kategori/Ekle" class=" btn btn-success">Yeni Kategori Ekle</a>
                </div>
                <div class=" block-content-outer" >
                    <div class=" block-content-inner">
                        <table class=" table table-striped table-hover">
                     <thead>
                         <tr>
                             <th>Kategori Adı</th>
                             <th>Tanımı</th>
                             <th>Güncelle</th>
                             <th>Sil</th>
                         </tr>


                     </thead>
                            <tbody>
                              @foreach (Categories  ktg in Model)
                              {
                                <tr>
                                    <td>@ktg.CategoryName</td>
                                    <td>@ktg.Description</td>
                                    <td><a href=" /Kategori/Guncelle/@ktg.CategoryID "class=" btn btn-primary ">Güncelle</a></td>
                                    <td><a href="/Kategori/Sil/@ktg.CategoryID" class=" btn btn-danger">Sil</a></td>
                                </tr>
                              }
                            </tbody>
                        </table>
                    </div> 

                </div>
            </div>
        </div>
    </div>

</div>
