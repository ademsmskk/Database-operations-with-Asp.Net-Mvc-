
@{
    ViewBag.Title = "Ürünler";
}

@using aaaaa.Controllers;


@model List<Products>  

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürünler
                </div>
                <div class="block-controls">
                    
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Urun/UrunEkle" class=" btn btn-success rounded">Yeni Ürün Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                             
                                <th>Ürün Adı</th>
                                <th>Tedarikçi</th>
                                <th>Kategori</th>
                                <th>Birim Miktar</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th>Yeni Satış</th>
                                <th>En az yeni satış miktarı</th>
                                <th>Sonlandı</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Products u in Model)
                            {
                            <tr>
                                <td>@u.ProductName</td>
                                <td>@u.SupplierID</td>
                                @if (u.Categories == null)
                                {
                                    <td></td>
                                }
                                else
                                {
                                    <td>@u.Categories.CategoryName</td>
                                }

                                <td>@u.QuantityPerUnit</td>
                                <td>@u.UnitPrice</td>
                                <td>@u.UnitsInStock</td>
                                <td>@u.UnitsOnOrder</td>
                                <td>@u.ReorderLevel</td>
                                @if (u.Discontinued == true)
                                {
                                    <td><span class="label label-danger ">Stokta Yok</span></td>
                                }
                                else
                                {
                                    <td><span class="label label-success ">Stokta Var</span></td>
                                }

                                <td><a href=" /Urun/UrunSil" class="btn btn-danger rounded">Sil</a></td>
                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>